<IfModule mod_rewrite.c>
    <IfModule mod_negotiation.c>
        Options -MultiViews
    </IfModule>

    RewriteEngine On

    # Redirect Trailing Slashes If Not A Folder...
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)/$ /$1 [L,R=301]

    # Handle Front Controller...
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^ index.php [L]

    # Handle Authorization Header
    RewriteCond %{HTTP:Authorization} .
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]

    # Redirect /home to root
    RedirectMatch 301 ^/home$ /

    # Cachce documents for four hours.
    <filesMatch ".(html|txt)$">
        Header set Cache-Control "max-age=14400, must-revalidate"
    </filesMatch>

    # Cachce CSS and JavaScript for one week.
    <filesMatch ".(css|js)$">
        Header set Cache-Control "max-age=604800, public"
    </filesMatch>

    # Cachce images for two weeks.
    <filesMatch ".(jpg|jpeg|png|ico|svg)$">
        Header set Cache-Control "max-age=1209600, public"
    </filesMatch>

    # Force HTTPS
    RewriteCond %{HTTPS} off
    RewriteCond %{SERVER_NAME} =jobsaustralia.tech [OR]
    RewriteCond %{SERVER_NAME} =www.jobsaustralia.tech
    RewriteRule ^ https://jobsaustralia.tech%{REQUEST_URI} [END,QSA,R=permanent]
</IfModule>
